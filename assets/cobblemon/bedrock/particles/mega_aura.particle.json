{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "cobblemon:mega_aura",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particles/mega_aura"
      }
    },
    "components": {
      "minecraft:emitter_local_space": {
        "position": true,
        "rotation": true
      },
      "minecraft:emitter_rate_steady": {
        "spawn_rate": 750,
        "max_particles": 1000
      },
      "minecraft:emitter_lifetime_looping": {
        "active_time": 3.5
      },
      "minecraft:emitter_shape_disc": {
        "offset": [0, -1, 0],
        "radius": 1.5,
        "surface_only": true,
        "direction": ["math.random(-3,3)", 4, "math.random(-3,3)"]
      },
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(0.5,2.5)"
      },
      "minecraft:particle_initial_speed": 1,
      "minecraft:particle_motion_dynamic": {
        "linear_drag_coefficient": -0.25
      },
      "minecraft:particle_appearance_billboard": {
        "size": [0.25, 0.25],
        "facing_camera_mode": "rotate_xyz",
        "uv": {
          "texture_width": 16,
          "texture_height": 128,
          "flipbook": {
            "base_UV": [
              "Math.floor(v.particle_random_3 * 2) * 8",
              "Math.floor(v.particle_random_4 * 2) * 8"
            ],
            "size_UV": [8, 8],
            "step_UV": [0, 16],
            "frames_per_second": 12,
            "max_frame": 8,
            "stretch_to_lifetime": true
          }
        }
      },
      "minecraft:particle_motion_collision": {},
      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "v.particle_age / v.particle_lifetime",
          "gradient": {
            "0.0": "#FFE038FF",
            "0.32": "#FFEE5AFF",
            "0.67": "#FF72B4FF",
            "0.82": "#FF8AFF78",
            "1.0": "#FFFF6D1E"
          }
        }
      }
    }
  }
}
