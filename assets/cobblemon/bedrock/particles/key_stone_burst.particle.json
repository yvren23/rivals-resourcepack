{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "cobblemon:key_stone_burst",
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/particles/glowingsmoke_cyan"
      }
    },
    "components": {
      "minecraft:emitter_local_space": {
        "position": true,
        "rotation": false
      },
      "minecraft:emitter_rate_instant": {
        "num_particles": "math.clamp(50 * math.clamp(q.entity_size,1,2), 1, 260)"
      },
      "minecraft:emitter_lifetime_once": {
        "active_time": 1
      },
      "minecraft:emitter_shape_sphere": {
        "offset": [0, 4, 0],
        "radius": "math.clamp(q.entity_size, 1,3)/ 2",
        "surface_only": true,
        "direction": "outwards"
      },
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "v.particle_random_1*0.9 + 0.1"
      },
      "minecraft:particle_initial_spin": {
        "rotation": "math.random_integer(1,3)*90"
      },
      "minecraft:particle_initial_speed": "math.clamp(math.random(4,7) * q.entity_size, 9, 20 )",
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [
          "(v.particle_random_2*15 - 15/2) + (math.random(-4,4) * math.clamp(q.entity_size,1,2))",
          "(v.particle_random_3*8 - 4) + (math.random(-4,4) * math.clamp(q.entity_size,1,2))",
          "(v.particle_random_4*15 - 15/2) + (math.random(-4,4) * math.clamp(q.entity_size,1,2))"
        ],
        "linear_drag_coefficient": "math.random(5,6) / (math.clamp(q.entity_size,1,2))"
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          "0.175 * math.max(q.entity_size,1)",
          "0.175 * math.max(q.entity_size,1)"
        ],
        "facing_camera_mode": "rotate_xyz",
        "uv": {
          "texture_width": 8,
          "texture_height": 48,
          "flipbook": {
            "base_UV": [0, 0],
            "size_UV": [8, 8],
            "step_UV": [0, 8],
            "max_frame": 6,
            "stretch_to_lifetime": true
          }
        }
      },
      "minecraft:particle_motion_collision": {
        "collision_drag": 4,
        "collision_radius": 0.1
      },
      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "v.particle_random_4",
          "gradient": {
            "0.0": "#FFFFFFFF",
            "0.22": "#FFFF8989",
            "0.56": "#FFD6B7F7",
            "0.77": "#FF8EF7FF",
            "1.0": "#FFFFFFFF"
          }
        }
      }
    }
  }
}
