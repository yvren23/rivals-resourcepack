{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:aura_charge",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/medium-fadeorb"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 0.65, 1, 0.3, 0]
			}
		},
		"events": {
			"event_sound": {
				"sound_effect": {
					"event_name": "move.aurasphere.charge"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 75,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "event_sound"
			},
			"minecraft:emitter_shape_point": {
				"offset": ["math.random(-0.25,0.25)", "math.random(-0.25,0.25)", "-0.5+math.random(-0.25,0.25)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.5
			},
			"minecraft:particle_initial_speed": 0.5,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.3*variable.scale", "0.3*variable.scale"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 99,
					"texture_height": 9,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [9, 9],
						"step_UV": [9, 0],
						"frames_per_second": 20,
						"max_frame": 11,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.07": "#FF2A8BE2",
						"0.54": "#FF61AEE5",
						"1.0": "#FF61D1E5"
					}
				}
			}
		}
	}
}