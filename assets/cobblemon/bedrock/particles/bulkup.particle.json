{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:bulkup_actor",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/white_orb_shrink"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 200
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.clamp(q.entity_radius,1,100) * 2",
				"surface_only": true,
				"direction": "inwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.clamp(q.entity_radius,1,100) / 2"
			},
			"minecraft:particle_initial_speed": "math.clamp(q.entity_radius,1,100) * 2",
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["math.clamp(q.entity_size, 0.03,0.1)", "math.clamp(q.entity_size, 0.03,0.1)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 56,
					"texture_height": 8,
					"flipbook": {
						"base_UV": [8, 0],
						"size_UV": [8, 8],
						"step_UV": [8, 0],
						"frames_per_second": 1,
						"max_frame": 6,
						"stretch_to_lifetime": true,
						"loop": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FF6BDDFF",
						"1.0": "#ffffffff"
					}
				}
			}
		}
	}
}